<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/record_problem_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Problem name"
        android:textSize="26dp"
        android:gravity="center"/>
    <EditText
        android:id="@+id/record_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Title "/>

    <EditText
        android:id="@+id/record_description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Description "/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="photo"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="geolocation"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="body location"/>
    <Button
        android:id="@+id/record_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"/>

</LinearLayout>