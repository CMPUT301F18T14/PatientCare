<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.XOnBodyLocationActivity"
    android:background="#fff"
    android:gravity="bottom"
    android:id="@+id/x_container">

    <ImageView
        android:id="@+id/blank_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_holder"
        />

    <com.example.picmymedcode.View.DrawViewForFixedX
        android:id="@+id/bodyLocation_x"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:layout_above="@+id/button_holder"/>

</RelativeLayout>