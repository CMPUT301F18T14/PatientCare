<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.XOnBodyLocationActivity"
    android:background="#fff"
    android:gravity="bottom"
    android:id="@+id/x_container">

    <ImageView
        android:id="@+id/blank_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_holder"
        />

    <com.example.picmymedcode.View.DrawView
        android:id="@+id/bodyLocation_x"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:layout_above="@+id/button_holder"/>

    <LinearLayout
        android:id="@+id/button_holder"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/bodyLocation_cancelButton"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:background="@drawable/signupbtn1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/bodyLocation_saveButton"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Save"
            android:background="@drawable/signupbtn1"
            android:layout_margin="5dp"/>

    </LinearLayout>

</RelativeLayout>