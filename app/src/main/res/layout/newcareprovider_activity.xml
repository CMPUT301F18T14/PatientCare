<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <Button
        android:id="@+id/addPatientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add a new Patient"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_box_purple"/>

    <TextView
        android:id="@+id/careProviderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome Care Provider"
        android:textSize="25sp"
        android:textColor="#16BBE5"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/PatientList_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scrollbars="vertical" />


</LinearLayout>