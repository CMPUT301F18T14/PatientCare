<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/careproviderToolbar"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:titleTextColor="#ffff"
        android:background="@drawable/blue_gradient"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <Button
        android:id="@+id/addPatientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/careproviderToolbar"
        android:background="@drawable/rounded_box_purple"
        android:paddingHorizontal="20dp"
        android:text="Add a new Patient" />

    <TextView
        android:id="@+id/careProviderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addPatientButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="#16BBE5"
        android:textSize="25sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/PatientList_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/addPatientButton"
        android:scrollbars="vertical" />



</RelativeLayout>