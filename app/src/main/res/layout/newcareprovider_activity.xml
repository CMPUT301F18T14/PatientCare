<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <Button
        android:id="@+id/addPatientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_box_purple"
        android:paddingHorizontal="20dp"
        android:text="Add a new Patient" />

    <TextView
        android:id="@+id/careProviderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addPatientButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:text="Welcome Care Provider"
        android:textColor="#16BBE5"
        android:textSize="25sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/PatientList_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/careProviderName"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/view_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:onClick="imageClick"
        android:paddingRight="4dp"
        android:src="@drawable/profile_white"
        android:tint="#000" />


</RelativeLayout>