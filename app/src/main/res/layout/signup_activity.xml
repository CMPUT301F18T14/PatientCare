<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.picmymedcode.View.SignUpActivity"
    android:background = "@drawable/background_gradient">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a..."
        android:layout_above="@+id/patientButton"
        android:layout_centerInParent="true"
        android:textSize="25dp"
        android:paddingBottom="10dp"/>
        android:layout_gravity="center_horizontal"
        android:text="@string/are_you_a"
        android:textSize="25sp" />

    <Button
        android:id="@+id/patientButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/patient"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_box"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/careProviderButton"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/care_provider"
        android:layout_centerInParent="true"
        android:layout_below="@+id/patientButton"
        android:background="@drawable/rounded_box"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>

