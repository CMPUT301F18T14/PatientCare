<!--https://www.android-examples.com/add-rounded-corners-border-to-edittext-android-using-xml/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#D17198"
                android:endColor="#D073F1"
                android:type="linear" />
            <corners android:radius="10dp" />
            <stroke
                android:width="0dp"
                android:height="0dp"
                android:color="#3EE3BC"
                />
        </shape>
    </item>
</selector>