<!--https://www.android-examples.com/add-rounded-corners-border-to-edittext-android-using-xml/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            android:layout_height="50dp"
            <gradient
                android:angle="180"
                android:startColor="#16BBE5"
                android:endColor="#3EE3BC"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>