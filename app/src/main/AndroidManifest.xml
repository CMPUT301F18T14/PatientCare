<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mukha.picmymedcode" >


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false"/>
        <activity android:name=".View.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".View.newUsernameActivity"
            android:label="Enter Username"/>
        <activity android:name=".View.SignUpActivity"
            android:label="Sign Up"/>
        <activity android:name=".View.ProblemActivity"
            android:label="Problem"/>
        <activity android:name=".View.AddProblemActivity"
            android:label="New Problem"/>
        <activity android:name=".View.RecordActivity"
            android:label="Record"/>
        <activity android:name=".View.AddRecordActivity"
            android:label="New Record"/>
    </application>

</manifest>

